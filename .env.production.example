# Production Environment for apyhubxyz
# Copy to .env (or keep as .env.production and pass with `env_file`)

# --- Database ---
POSTGRES_DB=apyhub
POSTGRES_USER=apyhub
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_PORT=5432

# DATABASE_URL for prisma when running locally (compose overrides in backend)
# DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# --- Backend ---
NODE_ENV=production
BACKEND_PORT=3001

# Blockchain RPC
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# CORS origins (production)
CORS_ORIGIN=https://apyhub.xyz,https://www.apyhub.xyz

# OpenAI (optional)
OPENAI_API_KEY=

# Cache & Rate Limit
CACHE_TTL=60
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info

# --- Frontend ---
FRONTEND_PORT=3000
# Use relative paths so Nginx proxies API/WS
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=/ws
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# --- Nginx Host Port Bindings ---
# On a real server, set these to 80 and 443
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
