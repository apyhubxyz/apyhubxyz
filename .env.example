# Apyhub Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the .env file to git!

# ======================================
# Database Configuration
# ======================================
POSTGRES_DB=apyhub
POSTGRES_USER=apyhub
POSTGRES_PASSWORD=your_secure_password_here_change_this
POSTGRES_PORT=5433

# Database URL for Prisma
# For local development (adjust port if you changed POSTGRES_PORT above):
DATABASE_URL="postgresql://apyhub:your_secure_password_here_change_this@localhost:5433/apyhub?schema=public"

# For Docker (uncomment when using docker-compose):
# DATABASE_URL="postgresql://apyhub:your_secure_password_here_change_this@postgres:5432/apyhub?schema=public"

# ======================================
# Backend Configuration
# ======================================
NODE_ENV=production
# Express server port
PORT=3001
# Optional docker-compose override
BACKEND_PORT=3003

# Blockchain RPC (Get your own key from Alchemy or Infura)
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# CORS Origins (comma-separated)
CORS_ORIGIN=https://apyhub.xyz,https://www.apyhub.xyz

# OpenAI API (Optional - for AI chat feature)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# Cache & Rate Limiting
CACHE_TTL=60
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Envio / Indexing (required for positions)
# Get your key from Envio and set the network id (1=Ethereum mainnet)
ENVIO_API_KEY=your_envio_api_key
# ENVIO_HYPERSYNC_API_KEY=your_envio_hypersync_key_optional
ENVIO_NETWORK_ID=1
ENVIO_HYPERINDEX_URL=https://api.envio.dev/hyperindex

# Redis cache (optional, used for Envio response caching)
REDIS_URL=redis://localhost:6379

# ======================================
# Frontend Configuration
# ======================================
FRONTEND_PORT=3002

# Development URLs
NEXT_PUBLIC_API_URL=https://apyhub.xyz/api
NEXT_PUBLIC_WS_URL=wss://apyhub.xyz

# WalletConnect Project ID (Get from: https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Production URLs (uncomment for production)
# NEXT_PUBLIC_API_URL=https://apyhub.xyz/api
# NEXT_PUBLIC_WS_URL=wss://apyhub.xyz
